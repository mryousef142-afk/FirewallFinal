VITE_DASHBOARD_DELAY_MS=300
VITE_DASHBOARD_REFRESH_MS=0

# Database
DATABASE_URL="postgresql://tgfw_user:tgfw_pass@localhost:5432/tgfw?schema=public"

# Bot server configuration
# Set BOT_START_MODE=polling to run without webhook (development).
BOT_START_MODE=webhook
WEBHOOK_DOMAIN=https://your.domain
WEBHOOK_PATH=/telegram/webhook
PORT=3000
# Optional: bind to a specific interface (default 0.0.0.0)
HOST=0.0.0.0
# Optional: secret token for Telegram webhook verification
BOT_WEBHOOK_SECRET=

# Frontend API base (for Cloudflare Worker deployments point this to the worker URL, e.g. https://firewall-worker.your.domain)
VITE_API_BASE_URL=https://your.domain/api/v1

# API settings
# Maximum age (seconds) accepted for Telegram initData payloads
API_INITDATA_MAX_AGE=600

# Message processing & moderation
